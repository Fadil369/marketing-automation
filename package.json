{
  "name": "brainsait-marketing-platform",
  "version": "2.0.0",
  "description": "AI-powered marketing automation platform for social media management with advanced integrations",
  "main": "src/core/Application.js",
  "type": "module",
  "scripts": {
    "dev": "webpack serve --config webpack.config.cjs --mode development",
    "build": "webpack --config webpack.config.cjs --mode production",
    "build:analyze": "ANALYZE=true npm run build",
    "build:esm": "rollup -c rollup.config.js",
    "start": "npm run dev",
    "serve": "http-server dist -p 8080 -c-1",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "lint": "eslint src --ext .js",
    "lint:fix": "eslint src --ext .js --fix",
    "format": "prettier --write \"src/**/*.{js,css,html}\"",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist coverage",
    "validate": "npm run lint && npm run test && npm run build",
    "deploy:staging": "npm run build && npm run deploy:cloudflare:staging",
    "deploy:production": "npm run validate && npm run deploy:cloudflare:production",
    "deploy:cloudflare:staging": "wrangler publish --env staging",
    "deploy:cloudflare:production": "wrangler publish --env production",
    "worker:dev": "wrangler dev workers/api.js",
    "worker:deploy": "wrangler publish workers/api.js",
    "pages:dev": "wrangler pages dev dist",
    "pages:deploy": "wrangler pages publish dist",
    "setup": "npm install && npm run build",
    "postinstall": "husky install",
    "release": "semantic-release",
    "security:audit": "npm audit --audit-level moderate",
    "security:fix": "npm audit fix",
    "performance:test": "lighthouse http://localhost:3000 --output=html --output-path=reports/lighthouse.html",
    "docs:build": "jsdoc -c jsdoc.config.json",
    "monitor": "node scripts/monitor.js"
  },
  "keywords": [
    "marketing-automation",
    "ai-marketing",
    "social-media-management",
    "campaign-management",
    "analytics-platform",
    "brainsait",
    "cloudflare-workers",
    "enterprise-software",
    "tiktok-api",
    "instagram-api",
    "snapchat-api",
    "youtube-api",
    "twitter-api",
    "workflow-automation",
    "predictive-analytics",
    "real-time-dashboard"
  ],
  "author": {
    "name": "BrainSAIT Team",
    "email": "support@brainsait.io",
    "url": "https://brainsait.io"
  },
  "license": "MIT",
  "homepage": "https://reach.brainsait.io",
  "bugs": {
    "url": "https://github.com/Fadil369/marketing-automation/issues",
    "email": "support@brainsait.io"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.9.0",
    "@paper-design/shaders-react": "^0.0.46",
    "chart.js": "^4.4.0",
    "date-fns": "^2.30.0",
    "dompurify": "^3.0.5",
    "framer-motion": "^12.23.12",
    "lodash-es": "^4.17.21",
    "marked": "^9.1.0",
    "node-fetch": "^3.3.0",
    "openai": "^4.20.0",
    "uuid": "^9.0.1",
    "ws": "^8.14.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/eslint-parser": "^7.23.0",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-class-properties": "^7.23.0",
    "@babel/plugin-transform-nullish-coalescing-operator": "^7.23.0",
    "@babel/plugin-transform-optional-chaining": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@cloudflare/workers-types": "^4.0.0",
    "@playwright/test": "^1.40.0",
    "@rollup/plugin-babel": "^6.0.0",
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-node-resolve": "^15.2.0",
    "@rollup/plugin-terser": "^0.4.0",
    "@testing-library/dom": "^9.3.0",
    "@testing-library/jest-dom": "^6.1.0",
    "autoprefixer": "^10.4.0",
    "babel-loader": "^9.1.3",
    "compression-webpack-plugin": "^11.1.0",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.8.0",
    "css-minimizer-webpack-plugin": "^7.0.2",
    "cssnano": "^6.0.0",
    "eslint": "^8.50.0",
    "html-webpack-plugin": "^5.5.0",
    "http-server": "^14.1.0",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdoc": "^4.0.0",
    "lighthouse": "^11.0.0",
    "lint-staged": "^15.0.0",
    "mini-css-extract-plugin": "^2.9.4",
    "postcss": "^8.4.0",
    "postcss-loader": "^7.3.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "rollup": "^4.0.0",
    "semantic-release": "^22.0.0",
    "style-loader": "^3.3.0",
    "terser-webpack-plugin": "^5.3.14",
    "typescript": "^5.2.0",
    "webpack": "^5.89.0",
    "webpack-bundle-analyzer": "^4.9.0",
    "webpack-cli": "^5.1.0",
    "webpack-dev-server": "^4.15.0",
    "webpack-merge": "^5.10.0",
    "workbox-webpack-plugin": "^7.0.0",
    "wrangler": "^4.30.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "browserslist": [
    "defaults",
    "not IE 11",
    "not op_mini all"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:Fadil369/marketing-automation.git"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,html,json}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run validate"
    }
  },
  "exports": {
    ".": "./src/main.js",
    "./components/*": "./src/components/*/index.js",
    "./services/*": "./src/services/*/index.js",
    "./utils/*": "./src/utils/*/index.js"
  },
  "files": [
    "src/",
    "api/",
    "dist/",
    "docs/",
    "README.md",
    "LICENSE",
    "wrangler.toml"
  ],
  "funding": {
    "type": "individual",
    "url": "https://brainsait.io/funding"
  },
  "config": {
    "port": 3000,
    "apiPort": 8787
  }
}
