# BrainSAIT Marketing Platform - Environment Variables
# Copy this file to .env and fill in your actual values

# Application Configuration
NODE_ENV=development
ENVIRONMENT=development
APP_VERSION=2.0.0
DEBUG=true

# Cloudflare Configuration
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token
CLOUDFLARE_ZONE_ID=your_cloudflare_zone_id

# Cloudflare KV Namespaces
CLOUDFLARE_KV_CACHE_ID=your_cache_kv_id
CLOUDFLARE_KV_CACHE_PREVIEW_ID=your_cache_preview_kv_id
CLOUDFLARE_KV_SESSIONS_ID=your_sessions_kv_id
CLOUDFLARE_KV_SESSIONS_PREVIEW_ID=your_sessions_preview_kv_id
CLOUDFLARE_KV_ANALYTICS_ID=your_analytics_kv_id
CLOUDFLARE_KV_ANALYTICS_PREVIEW_ID=your_analytics_preview_kv_id

# Cloudflare D1 Database
CLOUDFLARE_D1_DATABASE_ID=your_d1_database_id
CLOUDFLARE_D1_DATABASE_DEV_ID=your_d1_dev_database_id
CLOUDFLARE_D1_DATABASE_STAGING_ID=your_d1_staging_database_id
CLOUDFLARE_D1_DATABASE_PROD_ID=your_d1_prod_database_id

# Cloudflare Hyperdrive
CLOUDFLARE_HYPERDRIVE_ID=your_hyperdrive_id

# AI API Keys
OPENAI_API_KEY=your_openai_api_key
OPENAI_ORG=your_openai_organization_id
ANTHROPIC_API_KEY=your_anthropic_api_key

# AI API Keys - Staging
OPENAI_API_KEY_STAGING=your_staging_openai_api_key
OPENAI_ORG_STAGING=your_staging_openai_organization_id
ANTHROPIC_API_KEY_STAGING=your_staging_anthropic_api_key

# Platform API Keys - TikTok
TIKTOK_CLIENT_ID=your_tiktok_client_id
TIKTOK_CLIENT_SECRET=your_tiktok_client_secret
TIKTOK_CLIENT_ID_STAGING=your_staging_tiktok_client_id
TIKTOK_CLIENT_SECRET_STAGING=your_staging_tiktok_client_secret

# Platform API Keys - Instagram/Facebook
INSTAGRAM_CLIENT_ID=your_instagram_client_id
INSTAGRAM_CLIENT_SECRET=your_instagram_client_secret
INSTAGRAM_CLIENT_ID_STAGING=your_staging_instagram_client_id
INSTAGRAM_CLIENT_SECRET_STAGING=your_staging_instagram_client_secret

# Platform API Keys - YouTube
YOUTUBE_CLIENT_ID=your_youtube_client_id
YOUTUBE_CLIENT_SECRET=your_youtube_client_secret
YOUTUBE_CLIENT_ID_STAGING=your_staging_youtube_client_id
YOUTUBE_CLIENT_SECRET_STAGING=your_staging_youtube_client_secret

# Platform API Keys - Snapchat
SNAPCHAT_CLIENT_ID=your_snapchat_client_id
SNAPCHAT_CLIENT_SECRET=your_snapchat_client_secret
SNAPCHAT_CLIENT_ID_STAGING=your_staging_snapchat_client_id
SNAPCHAT_CLIENT_SECRET_STAGING=your_staging_snapchat_client_secret

# Database Configuration
DATABASE_URL=your_database_connection_string
DATABASE_URL_STAGING=your_staging_database_connection_string

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_at_least_32_characters_long
JWT_SECRET_STAGING=your_staging_jwt_secret_key_at_least_32_characters_long

# Email Configuration (for notifications)
SMTP_HOST=your_smtp_host
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password
FROM_EMAIL=noreply@brainsait.com

# Monitoring and Analytics
MONITORING_API_KEY=your_monitoring_api_key
SENTRY_DSN=your_sentry_dsn
ANALYTICS_TRACKING_ID=your_analytics_tracking_id

# Slack Integration (for notifications)
SLACK_WEBHOOK_URL=your_slack_webhook_url
SLACK_BOT_TOKEN=your_slack_bot_token

# Redis Configuration (if using external Redis)
REDIS_URL=your_redis_connection_string
REDIS_PASSWORD=your_redis_password

# S3/Object Storage (if using external storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
S3_BUCKET=your_s3_bucket_name

# GitHub Configuration (for repository integration)
GITHUB_TOKEN=your_github_personal_access_token
GITHUB_WEBHOOK_SECRET=your_github_webhook_secret

# Stripe Configuration (for payments)
STRIPE_PUBLIC_KEY=your_stripe_public_key
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# Development Tools
WEBPACK_DEV_SERVER_PORT=3000
API_DEV_SERVER_PORT=3001

# Security Configuration
ENCRYPTION_KEY=your_32_character_encryption_key
CORS_ORIGINS=http://localhost:3000,https://app.brainsait.com

# Feature Flags
FEATURE_AI_GENERATION=true
FEATURE_REAL_TIME_UPDATES=true
FEATURE_ANALYTICS=true
FEATURE_PLATFORM_POSTING=true
FEATURE_WORKFLOW_AUTOMATION=true

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=900000

# Cache Configuration
CACHE_TTL=300000
CACHE_MAX_SIZE=100

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Performance Monitoring
PERFORMANCE_MONITORING=true
PERFORMANCE_SAMPLE_RATE=0.1

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# API Endpoints (for different environments)
API_BASE_URL=http://localhost:3001
API_BASE_URL_STAGING=https://api-staging.brainsait.com
API_BASE_URL_PRODUCTION=https://api.brainsait.com

# WebSocket URLs
WS_URL=ws://localhost:3001/ws
WS_URL_STAGING=wss://ws-staging.brainsait.com
WS_URL_PRODUCTION=wss://ws.brainsait.com

# CDN Configuration
CDN_URL=https://cdn.brainsait.com
ASSETS_URL=https://assets.brainsait.com

# Legal and Compliance
PRIVACY_POLICY_URL=https://brainsait.com/privacy
TERMS_OF_SERVICE_URL=https://brainsait.com/terms
GDPR_COMPLIANCE=true