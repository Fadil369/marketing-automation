{
  "env": {
    "browser": true,
    "es2022": true,
    "node": true,
    "worker": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "requireConfigFile": false,
    "babelOptions": {
      "presets": ["@babel/preset-env"]
    }
  },
  "rules": {
    "no-console": "off",
    "no-debugger": "error",
    "no-unused-vars": ["warn", { 
      "argsIgnorePattern": "^_",
      "varsIgnorePattern": "^_" 
    }],
    "prefer-const": "error",
    "no-var": "error",
    "eqeqeq": "warn",
    "curly": "warn",
    "no-eval": "error",
    "no-implied-eval": "error",
    "no-new-func": "error",
    "no-script-url": "error",
    "no-alert": "warn",
    "no-undef": "warn",
    "no-case-declarations": "warn"
  },
  "globals": {
    "globalThis": "readonly"
  }
}